{{extend 'layout.html'}}
<div class="title">{{=T("List groups")}}</div>
<div class="add">{{=A(T("Add group"),_href=URL(request.application,"groups","add"))}}</div>
<table class="smarttable">
<thead>
    <tr>
        <th width="16px"></th>
        <th>{{=db.auth_group.role.label}}</th>
        <th>{{=db.auth_group.description.label}}</th>
    </tr>    
</thead>
<tbody>
{{for k,row in enumerate(rows):}} 
    <tr class="{{='odd' if k%2 else 'even'}}">
       <td>{{=A(IMG(_src=URL(request.application,'static/images','edit.png')),_href=URL(request.application,"membership","edit", args=[row.id]))}}</td>
       <td>{{=row.role}}</td>   
       <td>{{=row.description}}</td>
    </tr>
{{pass}}
</tbody>
</table>
