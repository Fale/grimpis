{{extend 'layout.html'}}
<div class="title">{{=T("List Memberships")}}</div>
<div class="add">{{=A(T("Add membership"),_href=URL(request.application,"membership","add"))}}</div>
<table class="smarttable">
<thead>
    <tr>
        <th width="16px"></th>
        <th>{{=db.auth_membership.user_id.label}}</th>
        <th>{{=db.auth_membership.group_id.label}}</th>
    </tr>    
</thead>
<tbody>
{{for k,row in enumerate(rows):}} 
    <tr class="{{='odd' if k%2 else 'even'}}">
       <td>{{=A(IMG(_src=URL(request.application,'static/images','edit.png')),_href=URL(request.application,"membership","edit", args=[row.id]))}}</td>
       <td>{{=row.user_id.first_name + " " + row.user_id.last_name}}</td>   
       <td>{{=row.group_id}}</td>
    </tr>
{{pass}}
</tbody>
</table>
